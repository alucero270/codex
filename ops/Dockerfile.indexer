FROM mcr.microsoft.com/dotnet/sdk:10.0 AS build
WORKDIR /src

COPY src/Codex.Indexer/Codex.Indexer.csproj src/Codex.Indexer/
COPY src/Codex.Contracts/Codex.Contracts.csproj src/Codex.Contracts/
RUN dotnet restore src/Codex.Indexer/Codex.Indexer.csproj

COPY src/Codex.Indexer/ src/Codex.Indexer/
COPY src/Codex.Contracts/ src/Codex.Contracts/
RUN dotnet publish src/Codex.Indexer/Codex.Indexer.csproj \
    -c Release \
    -o /app/publish \
    /p:UseAppHost=false

FROM mcr.microsoft.com/dotnet/runtime:10.0 AS final
WORKDIR /app

COPY --from=build /app/publish .
ENTRYPOINT ["dotnet", "Codex.Indexer.dll"]
